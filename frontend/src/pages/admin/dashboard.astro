---
import Layout from '../../layouts/Layout.astro';
import { getEventos, getArtistas, getLocalidades } from '../../lib/api';

const eventos = await getEventos();
const artistas = await getArtistas();
const localidades = await getLocalidades();

const eventosActivos = eventos.filter(e => new Date(e.fecha_fin) >= new Date()).length;
const eventosFinalizados = eventos.filter(e => new Date(e.fecha_fin) < new Date()).length;
---

<Layout title="Panel de Administración - Concerto">
  <div class="admin-wrapper">
    <!-- Sidebar -->
    <aside class="admin-sidebar">
      <div class="sidebar-header">
        <h2 class="sidebar-logo">CONCERTO</h2>
        <span class="sidebar-subtitle">PANEL ADMIN</span>
      </div>
      <nav class="sidebar-nav">
        <a href="/admin/dashboard" class="nav-item active">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
          Dashboard
        </a>
        <a href="/admin/eventos" class="nav-item">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          Eventos
        </a>
        <a href="/admin/artistas" class="nav-item">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 18V5l12-2v13"></path>
            <circle cx="6" cy="18" r="3"></circle>
            <circle cx="18" cy="16" r="3"></circle>
          </svg>
          Artistas
        </a>
        <a href="/admin/localidades" class="nav-item">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          Localidades
        </a>
        <a href="/" class="nav-item nav-logout">
          <svg class="nav-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Cerrar Sesión
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="admin-main">
      <div class="admin-header">
        <div>
          <h1>DASHBOARD</h1>
          <p>Resumen general del sistema</p>
        </div>
      </div>

      <!-- Stats Cards -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-content">
            <span class="stat-label">TOTAL EVENTOS</span>
            <h3 class="stat-number">{eventos.length}</h3>
          </div>
          <div class="stat-icon-wrapper stat-purple">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-content">
            <span class="stat-label">EVENTOS ACTIVOS</span>
            <h3 class="stat-number">{eventosActivos}</h3>
          </div>
          <div class="stat-icon-wrapper stat-green">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
            </svg>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-content">
            <span class="stat-label">ARTISTAS</span>
            <h3 class="stat-number">{artistas.length}</h3>
          </div>
          <div class="stat-icon-wrapper stat-pink">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 18V5l12-2v13"></path>
              <circle cx="6" cy="18" r="3"></circle>
              <circle cx="18" cy="16" r="3"></circle>
            </svg>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-content">
            <span class="stat-label">LOCALIDADES</span>
            <h3 class="stat-number">{localidades.length}</h3>
          </div>
          <div class="stat-icon-wrapper stat-orange">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
        </div>
      </div>

      <!-- Recent Events -->
      <div class="admin-section">
        <div class="section-header">
          <h2>EVENTOS RECIENTES</h2>
          <a href="/admin/eventos/crear" class="btn-primary">CREAR EVENTO</a>
        </div>
        <div class="table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>NOMBRE</th>
                <th>FECHA INICIO</th>
                <th>FECHA FIN</th>
                <th>UBICACIÓN</th>
                <th>ESTADO</th>
                <th>ACCIONES</th>
              </tr>
            </thead>
            <tbody>
              {eventos.slice(0, 5).map(evento => (
                <tr>
                  <td><span class="table-id">#{evento.id_evento}</span></td>
                  <td class="evento-nombre">{evento.nombre}</td>
                  <td>{new Date(evento.fecha_inicio).toLocaleDateString('es-CO')}</td>
                  <td>{new Date(evento.fecha_fin).toLocaleDateString('es-CO')}</td>
                  <td>{evento.municipio}</td>
                  <td>
                    <span class={`badge ${new Date(evento.fecha_fin) >= new Date() ? 'badge-active' : 'badge-finished'}`}>
                      {new Date(evento.fecha_fin) >= new Date() ? 'ACTIVO' : 'FINALIZADO'}
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <a href={`/admin/eventos/editar/${evento.id_evento}`} class="btn-action btn-edit">EDITAR</a>
                      <a href={`/eventos/${evento.id_evento}`} class="btn-action btn-view">VER</a>
                    </div>
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
        <div class="section-footer">
          <a href="/admin/eventos" class="btn-link">VER TODOS LOS EVENTOS</a>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="quick-actions">
        <h2 class="section-title">ACCIONES RÁPIDAS</h2>
        <div class="actions-grid">
          <a href="/admin/eventos/crear" class="action-card">
            <div class="action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
            </div>
            <h3>CREAR EVENTO</h3>
            <p>Registrar un nuevo evento en el sistema</p>
          </a>
          <a href="/admin/artistas" class="action-card">
            <div class="action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <h3>GESTIONAR ARTISTAS</h3>
            <p>Administrar la base de datos de artistas</p>
          </a>
          <a href="/admin/localidades" class="action-card">
            <div class="action-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
              </svg>
            </div>
            <h3>GESTIONAR LOCALIDADES</h3>
            <p>Configurar localidades disponibles</p>
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout>

<style>
  .admin-wrapper {
    display: flex;
    min-height: 100vh;
    background: #0a0a0a;
  }

  /* Sidebar */
  .admin-sidebar {
    width: 280px;
    background: linear-gradient(180deg, #2d0a4e 0%, #1a0033 100%);
    border-right: 3px solid #ff0066;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
  }

  .sidebar-header {
    padding: 2rem 1.5rem;
    border-bottom: 2px solid rgba(255, 0, 102, 0.3);
  }

  .sidebar-logo {
    color: #fff;
    font-size: 1.8rem;
    font-weight: 900;
    letter-spacing: 3px;
    background: linear-gradient(90deg, #ff0066, #ff6b9d);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.3rem;
  }

  .sidebar-subtitle {
    color: #aaa;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 2px;
  }

  .sidebar-nav {
    padding: 1.5rem 0;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    color: #ccc;
    text-decoration: none;
    transition: all 0.3s;
    font-weight: 600;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
  }

  .nav-icon {
    width: 22px;
    height: 22px;
    stroke-width: 2.5;
  }

  .nav-item:hover {
    background: rgba(255, 0, 102, 0.15);
    color: #fff;
    border-left: 4px solid #ff0066;
  }

  .nav-item.active {
    background: rgba(255, 0, 102, 0.2);
    color: #ff0066;
    border-left: 4px solid #ff0066;
  }

  .nav-logout {
    margin-top: 2rem;
    border-top: 2px solid rgba(255, 0, 102, 0.3);
    padding-top: 1.5rem;
    color: #ff6b6b;
  }

  .nav-logout:hover {
    background: rgba(255, 107, 107, 0.1);
    border-left: 4px solid #ff6b6b;
  }

  /* Main Content */
  .admin-main {
    flex: 1;
    margin-left: 280px;
    padding: 2.5rem;
  }

  .admin-header {
    margin-bottom: 2.5rem;
  }

  .admin-header h1 {
    font-size: 2.8rem;
    font-weight: 900;
    color: #ff0066;
    margin-bottom: 0.5rem;
    letter-spacing: 3px;
  }

  .admin-header p {
    color: #aaa;
    font-size: 1.1rem;
  }

  /* Stats Grid */
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .stat-card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 15px;
    border: 2px solid rgba(255, 0, 102, 0.2);
    transition: all 0.3s;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    border-color: #ff0066;
    box-shadow: 0 10px 40px rgba(255, 0, 102, 0.3);
  }

  .stat-content {
    flex: 1;
  }

  .stat-label {
    display: block;
    color: #aaa;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 1px;
    margin-bottom: 0.8rem;
  }

  .stat-number {
    font-size: 2.8rem;
    font-weight: 900;
    color: #fff;
    line-height: 1;
  }

  .stat-icon-wrapper {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    padding: 1rem;
  }

  .stat-icon-wrapper svg {
    width: 100%;
    height: 100%;
  }

  .stat-purple {
    background: rgba(138, 43, 226, 0.2);
    color: #8a2be2;
  }

  .stat-green {
    background: rgba(0, 255, 136, 0.2);
    color: #00ff88;
  }

  .stat-pink {
    background: rgba(255, 0, 102, 0.2);
    color: #ff0066;
  }

  .stat-orange {
    background: rgba(255, 165, 0, 0.2);
    color: #ffaa00;
  }

  /* Admin Section */
  .admin-section {
    background: rgba(255, 255, 255, 0.03);
    padding: 2rem;
    border-radius: 15px;
    border: 2px solid rgba(255, 0, 102, 0.2);
    margin-bottom: 2.5rem;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .section-header h2 {
    color: #ff0066;
    font-size: 1.6rem;
    font-weight: 900;
    letter-spacing: 2px;
  }

  .btn-primary {
    padding: 0.9rem 2rem;
    background: linear-gradient(135deg, #ff0066, #cc0052);
    color: #fff;
    text-decoration: none;
    border-radius: 30px;
    font-weight: 700;
    transition: all 0.3s;
    border: none;
    cursor: pointer;
    font-size: 0.9rem;
    letter-spacing: 1px;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(255, 0, 102, 0.5);
  }

  /* Table */
  .table-container {
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .admin-table {
    width: 100%;
    border-collapse: collapse;
  }

  .admin-table thead {
    background: rgba(255, 0, 102, 0.1);
  }

  .admin-table th {
    padding: 1.2rem 1rem;
    text-align: left;
    color: #ff0066;
    font-weight: 700;
    border-bottom: 2px solid #ff0066;
    font-size: 0.85rem;
    letter-spacing: 1px;
  }

  .admin-table td {
    padding: 1.2rem 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    color: #ccc;
  }

  .admin-table tbody tr {
    transition: all 0.3s;
  }

  .admin-table tbody tr:hover {
    background: rgba(255, 0, 102, 0.08);
  }

  .table-id {
    color: #ff0066;
    font-weight: 700;
  }

  .evento-nombre {
    color: #fff;
    font-weight: 600;
  }

  .badge {
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    display: inline-block;
  }

  .badge-active {
    background: rgba(0, 255, 136, 0.2);
    color: #00ff88;
    border: 1px solid #00ff88;
  }

  .badge-finished {
    background: rgba(255, 107, 107, 0.2);
    color: #ff6b6b;
    border: 1px solid #ff6b6b;
  }

  .action-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .btn-action {
    padding: 0.6rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 700;
    transition: all 0.3s;
    letter-spacing: 0.5px;
  }

  .btn-edit {
    background: rgba(255, 165, 0, 0.15);
    color: #ffaa00;
    border: 1px solid #ffaa00;
  }

  .btn-edit:hover {
    background: #ffaa00;
    color: #000;
  }

  .btn-view {
    background: rgba(138, 43, 226, 0.15);
    color: #8a2be2;
    border: 1px solid #8a2be2;
  }

  .btn-view:hover {
    background: #8a2be2;
    color: #fff;
  }

  .section-footer {
    text-align: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .btn-link {
    color: #ff0066;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.95rem;
    letter-spacing: 1px;
    transition: all 0.3s;
  }

  .btn-link:hover {
    color: #ff6b9d;
  }

  /* Quick Actions */
  .quick-actions {
    margin-top: 2.5rem;
  }

  .section-title {
    color: #ff0066;
    font-size: 1.6rem;
    font-weight: 900;
    margin-bottom: 2rem;
    letter-spacing: 2px;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .action-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2.5rem 2rem;
    border-radius: 15px;
    border: 2px solid rgba(255, 0, 102, 0.2);
    text-decoration: none;
    transition: all 0.3s;
    text-align: center;
  }

  .action-card:hover {
    transform: translateY(-8px);
    border-color: #ff0066;
    box-shadow: 0 15px 40px rgba(255, 0, 102, 0.3);
    background: rgba(255, 255, 255, 0.08);
  }

  .action-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 1.5rem;
    background: rgba(255, 0, 102, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .action-icon svg {
    width: 100%;
    height: 100%;
    stroke: #ff0066;
    stroke-width: 2.5;
  }

  .action-card h3 {
    color: #ff0066;
    font-size: 1.2rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
    letter-spacing: 1px;
  }

  .action-card p {
    color: #aaa;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  @media (max-width: 968px) {
    .admin-sidebar {
      width: 100%;
      position: relative;
      height: auto;
    }

    .admin-main {
      margin-left: 0;
      padding: 1.5rem;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .section-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .action-buttons {
      flex-direction: column;
    }

    .admin-header h1 {
      font-size: 2rem;
    }
  }
</style>